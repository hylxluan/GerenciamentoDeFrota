<UserControl x:Class="GerenciamentoDeFrota.Views.VeiculosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">

    <UserControl.Resources>

        <!-- Cores base -->
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#F5F7FB"/>
        <SolidColorBrush x:Key="TextStrong" Color="#1F2A37"/>
        <SolidColorBrush x:Key="TextSoft" Color="#6B7280"/>
        <SolidColorBrush x:Key="LineBrush" Color="#E5E7EB"/>

        <!-- TextBox padrão -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextStrong}"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource LineBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- TextBox multi-linha -->
        <Style x:Key="ModernTextBoxMultiline" TargetType="TextBox">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextStrong}"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource LineBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Height" Value="100"/>
        </Style>

        <!-- Label de campo -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextSoft}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource LineBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
        </Style>

        <!-- DataGrid clean -->
        <Style x:Key="CleanDataGrid" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="42"/>
            <Setter Property="ColumnHeaderHeight" Value="42"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowBackground" Value="#FFFFFF"/>
            <Setter Property="AlternatingRowBackground" Value="#FBFBFD"/>
            <Setter Property="BorderBrush" Value="{StaticResource LineBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

    </UserControl.Resources>

    <Grid Background="Transparent" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <StackPanel Grid.Row="0" Margin="2,2,2,14">
            <TextBlock Text="Cadastro de Veículos"
                       FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource TextStrong}"/>
            <TextBlock Text="Gerencie informações do veículo e visualize a lista cadastrada."
                       Margin="0,4,0,0" FontSize="12"
                       Foreground="{StaticResource TextSoft}"/>
        </StackPanel>

        <!-- FORM -->
        <StackPanel Grid.Row="1">

            <!-- Identificação do Veículo -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Identificação do Veículo"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextStrong}"
                               Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.4*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="Fabricante" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="TxtFabricante" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,12,0">
                            <TextBlock Text="Modelo" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="TxtModelo" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="0,0,12,0">
                            <TextBlock Text="Placa" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="TxtPlaca" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Renavam" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="TxtRenavam" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <CheckBox x:Name="ChkAtivo"
                              Content="Ativo?"
                              Margin="0,14,0,0"
                              Foreground="{StaticResource TextStrong}"/>
                </StackPanel>
            </Border>

            <!-- Informações Complementares -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Informações Complementares"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextStrong}"
                               Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="Ano do Modelo" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="TxtAnoModelo" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,12,0">
                            <TextBlock Text="Ano de Fabricação" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="TxtAnoFabricacao" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="0,0,12,0">
                            <TextBlock Text="Mês Emplacamento" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="TxtMesEmplacamento" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Venc. Tacógrafo" Style="{StaticResource FieldLabel}"/>
                            <DatePicker x:Name="DpVencTacografo"
                                        Height="32"
                                        FontSize="13"
                                        BorderBrush="{StaticResource LineBrush}"
                                        BorderThickness="1"
                                        SelectedDateFormat="Short"/>
                        </StackPanel>
                    </Grid>

                    <!-- Observações -->
                    <StackPanel Margin="0,14,0,0">
                        <TextBlock Text="Observações" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="TxtObservacoes" Style="{StaticResource ModernTextBoxMultiline}"/>
                    </StackPanel>

                    <!-- Botões -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">

                        <Button x:Name="BtnSalvarVeiculo" Margin="0,0,8,0"
                                Height="40" Cursor="Hand"
                                Background="#16A34A" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                        <StackPanel Orientation="Horizontal" Margin="16,0">
                                            <materialDesign:PackIcon Kind="ContentSaveOutline" Width="16" Height="16"
                                                                     Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <TextBlock Text="Salvar" Foreground="White" FontSize="13" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#15803D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="BtnEditarVeiculo" Margin="0,0,8,0"
                                Height="40" Cursor="Hand"
                                Background="#2563EB" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                        <StackPanel Orientation="Horizontal" Margin="16,0">
                                            <materialDesign:PackIcon Kind="PencilOutline" Width="16" Height="16"
                                                                     Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <TextBlock Text="Editar" Foreground="White" FontSize="13" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1D4ED8"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="BtnLimparCampos" Margin="0,0,8,0"
                                Height="40" Cursor="Hand"
                                Background="#F59E0B" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                        <StackPanel Orientation="Horizontal" Margin="16,0">
                                            <materialDesign:PackIcon Kind="Broom" Width="16" Height="16"
                                                                     Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <TextBlock Text="Limpar" Foreground="White" FontSize="13" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D97706"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="BtnDeletarVeiculo"
                                Height="40" Cursor="Hand"
                                Background="#DC2626" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                        <StackPanel Orientation="Horizontal" Margin="16,0">
                                            <materialDesign:PackIcon Kind="TrashCanOutline" Width="16" Height="16"
                                                                     Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <TextBlock Text="Deletar" Foreground="White" FontSize="13" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#B91C1C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>

        <!-- LISTA (DataGrid) + Filtro -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Margin="0,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header + Filtro -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Lista de Veículos"
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextStrong}"/>
                        <TextBlock Text="Selecione um item para editar, ou use as ações da linha."
                                   Margin="0,4,0,0" FontSize="12"
                                   Foreground="{StaticResource TextSoft}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Filtrar por Placa" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="TxtFiltroPlaca" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                </Grid>

                <DataGrid x:Name="DgVeiculos"
                          Grid.Row="2"
                          Style="{StaticResource CleanDataGrid}"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Código"        Binding="{Binding Codigo}"          Width="70"/>
                        <DataGridTextColumn Header="Fabricante"    Binding="{Binding Fabricante}"       Width="*"/>
                        <DataGridTextColumn Header="Modelo"        Binding="{Binding Modelo}"           Width="*"/>
                        <DataGridTextColumn Header="Ano modelo"    Binding="{Binding AnoModelo}"        Width="110"/>
                        <DataGridTextColumn Header="Ano fabricação" Binding="{Binding AnoFabricacao}"   Width="120"/>
                        <DataGridTextColumn Header="Ativo"         Binding="{Binding Ativo}"            Width="80"/>
                        <DataGridTextColumn Header="Renavam"       Binding="{Binding Renavam}"          Width="140"/>
                        <DataGridTextColumn Header="Placa"         Binding="{Binding Placa}"            Width="110"/>
                        <DataGridTextColumn Header="Emplacamento"  Binding="{Binding MesEmplacamento}"  Width="120"/>

                        <DataGridTemplateColumn Header="Ações" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="BtnEditarLinha"
                                                Width="30" Height="30"
                                                Margin="0,0,8,0"
                                                Background="#EEF2FF"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                            <materialDesign:PackIcon Kind="PencilOutline" Width="16" Height="16" Foreground="#4F46E5"/>
                                        </Button>
                                        <Button x:Name="BtnExcluirLinha"
                                                Width="30" Height="30"
                                                Background="#FEE2E2"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                            <materialDesign:PackIcon Kind="TrashCanOutline" Width="16" Height="16" Foreground="#DC2626"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>

    </Grid>
</UserControl>
