<Window x:Class="GerenciamentoDeFrota.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:GerenciamentoDeFrota.Views"
        Title="Gerenciamento de Frota"
        Height="850" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>

        <SolidColorBrush x:Key="AppSurfaceBrush" Color="#F5F7FB"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#FFFFFF"/>

        <LinearGradientBrush x:Key="SidebarBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#D7FBEA" Offset="0"/>
            <GradientStop Color="#8CE7B7" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="LogoHolderBrush" Color="#30FFFFFF"/>

        <SolidColorBrush x:Key="SidebarTitleBrush" Color="#0F3D2E"/>
        <SolidColorBrush x:Key="SidebarSubTitleBrush" Color="#2E6B57"/>

        <SolidColorBrush x:Key="NavHoverBrush" Color="#22FFFFFF"/>
        <SolidColorBrush x:Key="NavPressedBrush" Color="#33FFFFFF"/>

        <SolidColorBrush x:Key="NavSelectedBrush" Color="#300F3D2E"/>
        <SolidColorBrush x:Key="NavSelectedBorderBrush" Color="#450F3D2E"/>

        <Style x:Key="NavItemStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="52"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Root"
                                CornerRadius="14"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ContentPresenter Grid.Column="0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                           VerticalAlignment="Center"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource SidebarTitleBrush}"
                                           Text="{TemplateBinding Tag}"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{StaticResource NavHoverBrush}"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{StaticResource NavPressedBrush}"/>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{StaticResource NavSelectedBrush}"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource NavSelectedBorderBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border CornerRadius="25"
            Background="{StaticResource AppSurfaceBrush}"
            MouseDown="Border_MouseDown"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0"
                    Background="{StaticResource SidebarBrush}"
                    CornerRadius="25,0,0,25">

                <Grid Margin="18">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="18"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- LOGO + NOME -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top">

                        <!-- Logo +25% (52 -> 66) -->
                        <Border Width="66" Height="66"
                                CornerRadius="33"
                                Background="{StaticResource LogoHolderBrush}">
                            <Ellipse Margin="8">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/Assets/Images/logo_ecofrota.png"
                                                Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>

                        <StackPanel Margin="12,6,0,0">
                            <TextBlock x:Name="TxtEmpresa"
                                       Text="ECOFROTA"
                                       Foreground="{StaticResource SidebarTitleBrush}"
                                       FontSize="16"
                                       FontWeight="Bold"/>

                            <TextBlock Text="Gerenciamento de Frota"
                                       Foreground="{StaticResource SidebarSubTitleBrush}"
                                       FontSize="12"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Row="2" Height="1" Background="#22FFFFFF"/>

                    <!-- MENU -->
                    <StackPanel Grid.Row="4"
                                x:Name="MenuContainer"
                                Margin="0,18,0,0">

                        <RadioButton x:Name="RbDashboard"
                                     GroupName="Nav"
                                     Style="{StaticResource NavItemStyle}"
                                     Tag="Dashboard"
                                     IsChecked="True"
                                     Checked="RbDashboard_Checked"
                                     Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="ViewDashboard"
                                                     Width="26" Height="26"
                                                     Foreground="{StaticResource SidebarTitleBrush}"/>
                        </RadioButton>

                        <RadioButton x:Name="RbVeiculos"
                                     GroupName="Nav"
                                     Style="{StaticResource NavItemStyle}"
                                     Tag="Veículos"
                                     Checked="RbVeiculos_Checked"
                                     Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="CarOutline"
                                                     Width="26" Height="26"
                                                     Foreground="{StaticResource SidebarTitleBrush}"/>
                        </RadioButton>

                        <RadioButton x:Name="RbCondutores"
                                     GroupName="Nav"
                                     Style="{StaticResource NavItemStyle}"
                                     Tag="Condutores"
                                     Checked="RbCondutores_Checked">
                            <materialDesign:PackIcon Kind="AccountTieOutline"
                                                     Width="26" Height="26"
                                                     Foreground="{StaticResource SidebarTitleBrush}"/>
                        </RadioButton>

                    </StackPanel>

                    <StackPanel Grid.Row="5" x:Name="SidebarFooter"/>
                </Grid>
            </Border>

            <!-- ÁREA PRINCIPAL (DIREITA) -->
            <Border Grid.Column="1"
                    Background="{StaticResource AppSurfaceBrush}"
                    CornerRadius="0,25,25,0"
                    Padding="22">

                <Border Background="{StaticResource PanelBrush}"
                CornerRadius="18"
                Padding="18">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                        <ContentControl x:Name="MainContentHost"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"/>
                        </ScrollViewer> 
                </Border>

            </Border>

        </Grid>
    </Border>
</Window>